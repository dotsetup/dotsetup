<?xml version="1.0"?>
<RemoteConfiguration>
  <Protocol>
    <ProtocolVersion>1.0</ProtocolVersion>
  </Protocol>
  <ClientData>
    <City>New York</City>
    <CountryCode>US</CountryCode>
  </ClientData>
  <FlowSettings>
    <OptType>SMART</OptType>
    <MaxProducts>5</MaxProducts>
  </FlowSettings>
  <Products>
    <Product optional="true">
      <DynamicData>
        <Code>chnl1</Code>
        <Class>Security</Class>
        <GroupNumber>20</GroupNumber>
        <GroupName>Seg1</GroupName>
        <Skin>WA_Banner</Skin>
        <InternalName>webadvisor</InternalName>
        <Locales>
          <Locale name="en">
            <Texts>
              <Text cid="txtDescription" fontName="Helvetica" fontSize="10pt" fontStyle="Bold">The new Brave Browser automatically blocks ads and trackers, making it faster and safer than your current browser.</Text>
              <Text cid="txtDisclaimer">By clicking Accept, you have read the [Privacy policy|www.google.com] and hereby agree to the [End User License Agreement|www.google.com] and the installation of the Brave Browser. You may uninstall the product using "Add/Remove Programs"</Text>
            </Texts>
            <Images>
              <Image cid="imgLogo">logo2.png</Image>
              <Image cid="imgBackground">Custom_bg.png</Image>
            </Images>
            <UILayouts>
              <Button cid="btnAccept">Yes!</Button>
            </UILayouts>
          </Locale>
        </Locales>
      </DynamicData>
      <StaticData>
        <Title>Brave</Title>
        <DownloadURLs>
          <DownloadURL arch="32">http://braveprod.com/32/BraveSetup-ia32-BRA268.exe</DownloadURL>
          <DownloadURL arch="64">http://braveprod.com/64/BraveSetup-x64-BRA268.exe</DownloadURL>
        </DownloadURLs>
        <Logic>
          <Behavior>PkgDownloadAndRun</Behavior>
          <Events>
            <Event reportOn="PostInstall">InstallSuccess</Event>
          </Events>
        </Logic>
        <Layout>ProductLayout1</Layout>
        <Filename>brave.exe</Filename>
        <ExtractPath>C:\Windows\Temp</ExtractPath>
        <RunPath>C:\Windows\Temp\brave.exe</RunPath>
        <RunParams>
          <RunParam>--silent</RunParam>
          <RunParam>--instances 10</RunParam>
          <RunParam>
            /InstallID <Xpath-ref select="//SessionData/user_id" />|<Xpath-ref select="//SessionData/session_id" />
          </RunParam>
        </RunParams>
        <PreInstall>
          <Requirements>
            <Requirements>
              <Requirement>
                <Type>RegistryKeyExists</Type>
                <Keys>
                  <Key>HKLM\SOFTWARE\Microsoft\NET Framework Setup\NDP\v3\Client</Key>
                </Keys>
                <Value compareOp="Equal">True</Value>
              </Requirement>
            </Requirements>
            <Requirements>
              <Requirement>
                <Type>RegistryKeyValue</Type>
                <Keys>
                  <Key type="path">HKLM\SOFTWARE\Microsoft\NET Framework Setup\NDP\v4\Client</Key>
                  <Key type="value">TargetVersion</Key>
                </Keys>
                <Value compareOp="Equal">4.0.0</Value>
              </Requirement>
              <Requirement>
                <Type>Process</Type>
                <Keys logicalOp="OR">
                  <Key>AvastSvc.exe</Key>
                  <Key>instup.exe</Key>
                  <Key>AvastUI.exe</Key>
                  <Key>AVGUI.exe</Key>
                  <Key>avguix.exe</Key>
                  <Key>AVGSvc.exe</Key>
                  <Key>avgsvca.exe</Key>
                </Keys>
                <Value compareOp="Equal">0</Value>
              </Requirement>
            </Requirements>
            <Requirement>
              <Type>RAM</Type>
              <Keys>
                <Key>AvailablePhysicalMb</Key>
              </Keys>
              <Value compareOp="GreaterEqual">250</Value>
            </Requirement>
            <Requirement>
              <Type>Processor</Type>
              <Keys>
                <Key>Model</Key>
              </Keys>
              <Value compareOp="StartsWith">AMD</Value>
            </Requirement>
            <Requirement>
              <Type>Disk</Type>
              <Keys>
                <Key>FreeSpaceMb</Key>
              </Keys>
              <Value compareOp="GreaterEqual">2500</Value>
            </Requirement>
            <Requirement>
              <Type>BrowserInstalled</Type>
              <Keys logicalOp="AND">
                <Key>Chrome</Key>
                <Key>Edge</Key>
              </Keys>
              <Value compareOp="Equal">True</Value>
            </Requirement>
            <Requirement>
              <Type>BrowserDefault</Type>
              <Keys>
                <Key>Chrome</Key>
              </Keys>
              <Value compareOp="Equal">False</Value>
            </Requirement>
          </Requirements>
        </PreInstall>
        <PostInstall>
          <Requirements>
            <Requirement>
              <Type>Process</Type>
              <Keys>
                <Key>Brave.exe</Key>
              </Keys>
              <Value compareOp="GreaterEqual">1</Value>
            </Requirement>
          </Requirements>
        </PostInstall>
        <CustomData>
          <ParamsPerCountry>
            <US>affid1</US>
          </ParamsPerCountry>
        </CustomData>
      </StaticData>
    </Product>
    <Product optional="true">
      <DynamicData>
        <Code>chnl1</Code>
        <Class>Security</Class>
        <GroupNumber>20</GroupNumber>
        <GroupName>Seg1</GroupName>
